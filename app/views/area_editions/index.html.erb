<p id="notice"><%= notice %></p>

<h1>Listing Area Editions</h1>

<table>
  <thead>
    <tr>
      <th>Layout</th>
      <th>Name</th>
      <th>Required</th>
      <th>Order</th>
      <th>Area type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @area_editions.each do |area_edition| %>
      <tr>
        <td><%= area_edition.layout %></td>
        <td><%= area_edition.name %></td>
        <td><%= area_edition.required %></td>
        <td><%= area_edition.order %></td>
        <td><%= area_edition.area_type %></td>
        <td><%= link_to 'Show', area_edition %></td>
        <td><%= link_to 'Edit', edit_area_edition_path(area_edition) %></td>
        <td><%= link_to 'Destroy', area_edition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

