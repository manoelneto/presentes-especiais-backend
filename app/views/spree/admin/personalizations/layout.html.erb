<%= render partial: 'spree/admin/shared/product_tabs', locals: { current: :personalization } %>

<div class="personalization-screen">
  <div>
    <a class="btn btn-primary btn-sm with-tip" data-action="edit" title="" href="<%= main_app.admin_product_personalizations_path(@product) %>" data-original-title="Voltar">
      Voltar
    </a>
  </div>

  <div>
    Layout: 4 fotos

    <div class="row">
      <% ["Topo esquerda", "Todo direita", "Baixo"].each do |place| %>
      <div class="col-6">
        <div class="personalization">
          <div class="shadow"></div>

          <div class="top">
            Tipo <i>Imagem</i>
          </div>

          <figure>
            <img src="http://placehold.it/500x500" alt="">

            <figcaption>
              <%= place %>

              <span class="buttons">
                <a class="btn btn-primary btn-sm icon-link with-tip action-edit no-text" data-action="edit" title="" href="#" data-original-title="Edit">
                  <span class="icon icon-edit"></span>
                </a>
                <a class="btn btn-danger btn-sm delete-resource icon-link with-tip action-delete no-text" data-confirm="Are you sure?" data-action="remove" title="" href="#" data-original-title="Delete">
                  <span class="icon icon-delete"></span>
                </a>
              </span>
            </figcaption>
          </figure>
        </div>
      </div>
      <% end %>

      <div class="col-6">
        <div class="personalization add">
          <%= link_to main_app.new_admin_product_personalization_path(@product) do %>
            <span class="relative">
              <span class="widther"></span>
              <span class="absoluter">
                <span class="table-wrapper">
                  <span class="table-middler">
                    Add Layout
                  </span>
                </span>
              </span>
            </span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


