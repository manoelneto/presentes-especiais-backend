<% content_for :page_title do %>
  <%= Spree.t(:categories) %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Picture</th>
      <th colspan="3" width="20%">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= image_tag category.picture.url(:thumb) %></td>
        <td><%= link_to 'Show', main_app.url_for([:admin, category]), class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', main_app.url_for([:edit, :admin, category]), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', main_app.url_for([:admin, category]), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
